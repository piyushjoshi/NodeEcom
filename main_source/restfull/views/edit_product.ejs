<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/products/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="name" value="<%=data[0].name%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Description</td>
                    <td valign="top">: 
                        <textarea name="description" required cols="30" rows="5"><%=data[0].description%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">CID</td><td>: <input type="text" value="<%=data[0].cid%>" name="cid" required></td>
                 </tr>
				 
				 <tr>
                    <td class="label">Cost Price</td><td>: <input type="text"  value="<%=data[0].cp%>" name="cp" required></td>
                 </tr>
				 
				 <tr>
                    <td class="label">Selling Price</td><td>: <input type="text"  value="<%=data[0].sp%>" name="sp" required></td>
                 </tr>
				 
				 <tr>
                    <td class="label">Discount</td><td>: <input type="text"  value="<%=data[0].discount%>" name="discount" required></td>
                 </tr>
				 
				 
                  <tr>
                    <td class="label">Quantity</td><td>: <input type="text" name="quantity" value="<%=data[0].quantity%>" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
